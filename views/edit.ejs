<%- include ("partials/header") %>


<div class="editDiv">
  <h2>Edit Blog Post</h2>

  <form action="/edit/<%= post.id %>" method="POST">
    <label>Title:</label><br>
    <input type="text" name="blogTitle" value="<%= post.title %>" required><br><br>
  
    <label>Category:</label><br>
    <input type="text" name="blogCategory" value="<%= post.category %>" required><br><br>
  
    <label>Content:</label><br>
    <textarea name="blogBlog" required rows="6" cols="50"><%= post.blog %></textarea><br><br>
  
    <button type="submit">Save Changes</button>
  </form>
  
</div>


<%- include ("partials/footer") %>